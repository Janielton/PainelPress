<Window x:Class="PainelPress.WLog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PainelPress"
        mc:Ignorable="d"
        Title="Logs Sistema" Height="450" Width="800">
    <Grid>
        <RichTextBox Padding="1" x:Name="EditorLog" FontSize="16" Block.LineHeight="4"/>
        <Button x:Name="btClear" Click="btClear_Click" Content="Clear" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5"/>
    </Grid>
</Window>
